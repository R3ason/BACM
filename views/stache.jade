extends layout


block pagestyles
	link(rel="stylesheet", href="../styles/stache.css")

block content
	section.card

		h1.BeerName.centerHorizontal IPA
		img(src="https://avery-ipas-apis.s3.amazonaws.com/uploads/beer/bottle_image/10/1454460192_Can_ipa.png" alt="Image of delicious beer")#BeerLabel


		ul.BeerInfo.centerHorizontal
			li.beerStyle Style: {{beerStyle}}
			li.abv Alcohol by volume: {{abv}}

		article.Description.centerHorizontal Some awesome stuff that describes the beer.

		a(href="beer description generator")
			escaped Generate your Hipster Description&#8482; here!! 


block pagescripts
	script(src="http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.js")
	script(src="../scripts/hipster-library.js")
	script(src="/scripts/stache-module.js")
